{
  "components/beautify/grid-list": "<fieldset class=\"form-fieldset actionBar-section actionBar-section--mode\">\n    <div class=\"form-field\">\n        <label class=\"form-label\" for=\"mode\">{{lang 'common.sorter.columns'}}:</label>\n        {{#if theme_settings.product_list_display_mode '==' 'grid2'}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"2\" id=\"mode_2{{id_suffix}}\" checked>\n            <label class=\"form-option\" for=\"mode_2{{id_suffix}}\"><span class=\"form-option-variant\" title=\"Grid\"><i class=\"fa fa-th-large\" aria-hidden=\"true\"></i></span></label>\n        {{else if theme_settings.product_list_display_mode '==' 'grid3'}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"3\" id=\"mode_3{{id_suffix}}\" checked>\n            <label class=\"form-option\" for=\"mode_3{{id_suffix}}\"><span class=\"form-option-variant\" title=\"Grid\"><i class=\"fa fa-th-large\" aria-hidden=\"true\"></i></span></label>\n        {{else if theme_settings.product_list_display_mode '==' 'grid'}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"4\" id=\"mode_4{{id_suffix}}\" checked>\n            <label class=\"form-option\" for=\"mode_4{{id_suffix}}\"><span class=\"form-option-variant\" title=\"Grid\"><i class=\"fa fa-th-large\" aria-hidden=\"true\"></i></span></label>\n        {{else if theme_settings.product_list_display_mode '==' 'grid6'}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"6\" id=\"mode_6{{id_suffix}}\" checked>\n            <label class=\"form-option\" for=\"mode_6{{id_suffix}}\"><span class=\"form-option-variant\" title=\"Grid\"><i class=\"fa fa-th-large\" aria-hidden=\"true\"></i></span></label>\n        {{else}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"4\" id=\"mode_4{{id_suffix}}\">\n            <label class=\"form-option\" for=\"mode_4{{id_suffix}}\"><span class=\"form-option-variant\" title=\"Grid\"><i class=\"fa fa-th-large\" aria-hidden=\"true\"></i></span></label>\n        {{/if}}\n\n        {{#if theme_settings.show_bulk_order_mode}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"bo\" id=\"mode_bo{{id_suffix}}\" {{#if theme_settings.product_list_display_mode '===' 'list'}} checked{{/if}}>\n            <label class=\"form-option\" for=\"mode_bo{{id_suffix}}\"><span class=\"form-option-variant\" title=\"{{lang 'bulk_order.icon_title'}}\"><i class=\"fa fa-th-list\"></i></span></label>\n        {{else}}\n            <input class=\"form-radio\" type=\"radio\" name=\"mode\" value=\"1\" id=\"mode_1{{id_suffix}}\" {{#if theme_settings.product_list_display_mode '===' 'list'}} checked{{/if}}>\n            <label class=\"form-option\" for=\"mode_1{{id_suffix}}\"><span class=\"form-option-variant\" title=\"List\"><i class=\"fa fa-th-list\" aria-hidden=\"true\"></i></span></label>\n        {{/if}}\n    </div>\n</fieldset>\n"
}